<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="537.0" prefWidth="818.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep12.client.controller.LoginController">
   <children>
      <Label layoutX="162.0" layoutY="23.0" prefHeight="43.0" prefWidth="494.0" text="Dep12 General Chat App: Login">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <VBox alignment="CENTER" layoutX="218.0" layoutY="113.0" prefHeight="343.0" prefWidth="370.0" spacing="10.0">
         <children>
            <Label prefHeight="33.0" prefWidth="150.0" text="HOST/ IP ADDRESS">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <TextField fx:id="txtHost" alignment="CENTER" prefHeight="43.0" prefWidth="251.0" promptText="Eg: localhost/ 127.0.0.1" />
            <Label text="PORT">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <TextField fx:id="txtPort" alignment="CENTER" prefHeight="43.0" prefWidth="251.0" promptText="Eg: 5050" />
            <Label text="NICK NAME">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <TextField fx:id="txtName" alignment="CENTER" prefHeight="43.0" prefWidth="251.0" promptText="Eg: kasun" />
            <Button fx:id="btnLogin" defaultButton="true" mnemonicParsing="false" onAction="#btnLoginOnAction" prefHeight="35.0" prefWidth="118.0" text="Login" />
         </children>
      </VBox>
   </children>
</AnchorPane>
